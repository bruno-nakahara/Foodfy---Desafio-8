{% extends "header.njk" %}

{% block content %}

    <div class="container-create">
        <div class="title-admin">
            <h2>Gerenciar chefs</h2>
            <a href="/admin/chefs/create" class="linkToCreateChef">Novo chef</a>
        </div>
    </div>

    <div class="cards-chefs">

        {% for chef in chefs %}
            <div class="card-chefs">
                <div class="show-chef">
                    <img src="{{chef.src}}" alt="Image of {{chef.name}}" class="img-chef">
                    <div>
                        <h2>{{chef.name}}</h2>
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>

{% endblock %}