{% extends "header.njk" %}

{% block content %}

    <div class="container">
        <div class="title-admin">
            <h2>Receita:
                {{item.title}}</h2>
            <a href="/admin/recipes/{{item.id}}/edit" class="link-create">Editar receita</a>
        </div>

        <div class="recipe-container product-single">
            <div class="recipe-gallery">
                <div class="highlight">
                    {% if not files[0] %}
                        <img src="">
                    {% else %}
                        <img src="{{files[0].src}}" alt="{{files[0].name}}" onclick="Lightbox.open()">
                    {% endif %}
                </div>
                <div class="gallery-preview">
                    {% for image in files %}
                        <img src="{{image.src}}" alt="{{image.name}}" {% if loop.index0 == 0 %} class="active" {% endif %} onclick="ImageGallery.setImage(event)">
                    {% endfor %}
                </div>
            </div>
            <div class="recipe-title">
                <h1>{{item.title}}</h1>
            </div>
            <div class="recipe-author">
                <p>por
                    {{item.chef}}</p>
            </div>
        </div>

        <div class="title-ingredients">
            <h3>Ingredientes</h3>
        </div>

        <div class="ingredients-conteiner">
            <ul id="ingredients">
                {% for ingredient in item.ingredients %}
                    <li>{{ingredient}};</li>
                {% endfor %}
            </ul>
        </div>

        <div class="title-preparation">
            <h3>Modo de preparo</h3>
        </div>

        <div class="preparation">
            <ul id="preparation">
                {% for step in item.preparation %}
                    <li>{{step}}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="title-info">
            <h3>Informações adicionais</h3>
        </div>

        <div class="info-recipe">
            <p id="add-info">{{item.information}}</p>
        </div>

    </div>
{% endblock %}